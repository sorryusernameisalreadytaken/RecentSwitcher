<?xml version="1.0" encoding="utf-8"?>
<!--
    This manifest defines the basic configuration for the RecentsOpener app.
    The app consists of a single Activity and an AccessibilityService.

    The AccessibilityService is used to request the system to show the recents
    (overview) screen using performGlobalAction(GLOBAL_ACTION_RECENTS).
    To use the service the user must explicitly enable it in the system
    accessibility settings.

    RecentsOpener:
    - MainActivity zeigt nur einen Button
    - AccessibilityService ruft performGlobalAction(GLOBAL_ACTION_RECENTS) auf
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Allow querying launcher activities of other packages. Without
         this <queries> element, Android 11+ restricts visibility of
         packages outside this application. We need to enumerate and
         launch other apps via PackageManager. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>
    <!-- Permission to query recent app usage -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />

    <!-- Permission to query all installed packages. Required so that UsageStats and
         PackageManager queries include apps like ARD or Prime Video on Android 11+. -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <activity
            android:name="eu.recentsopener.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="eu.recentsopener.RecentsAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilityserviceconfig" />
        </service>

        <!-- Activity showing a list of recent apps using UsageStatsManager -->
        <activity
            android:name="eu.recentsopener.RecentAppsActivity"
            android:exported="true">
            <!-- Intent filter so external tools (e.g. Key Mapper) can open the recents list -->
            <intent-filter>
                <action android:name="eu.ras.SHOW_RECENTS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Provide a launcher alias to quickly open the recents list via key mapping -->
        <activity-alias
            android:name="eu.recentsopener.RecentsLauncher"
            android:targetActivity="eu.recentsopener.RecentAppsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Activity that immediately switches to the last used app. Theme.NoDisplay prevents any UI flicker. -->
        <activity
            android:name="eu.recentsopener.LastAppActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="eu.ras.SHOW_LAST_APP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Provide a launcher alias to quickly switch back to the last app via key mapping -->
        <activity-alias
            android:name="eu.recentsopener.LastLauncher"
            android:targetActivity="eu.recentsopener.LastAppActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Activity for managing excluded apps -->
        <activity
            android:name="eu.recentsopener.ExcludedAppsActivity"
            android:exported="true" />

        <!-- Activity showing a live, unfiltered list of recent usage events -->
        <activity
            android:name="eu.recentsopener.LiveEventsActivity"
            android:exported="true" />

        <!-- Additional activities implementing alternative last‑app heuristics.  -->
        <activity
            android:name="eu.recentsopener.LastAppVariant2Activity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay" />
        <activity
            android:name="eu.recentsopener.LastAppVariant3Activity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay" />
        <activity
            android:name="eu.recentsopener.LastAppVariant4Activity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay" />
        <activity
            android:name="eu.recentsopener.LastAppVariant5Activity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay" />

    </application>

</manifest>