<?xml version="1.0" encoding="utf-8"?>
<!--
    This manifest defines the basic configuration for the RecentsOpener app.
    The app consists of a single Activity and an AccessibilityService. The
    AccessibilityService is used to request the system to show the recents
    (overview) screen using performGlobalAction(GLOBAL_ACTION_RECENTS).
    To use the service the user must explicitly enable it in the system
    accessibility settings.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recentsopener">

    <application
        android:allowBackup="true"
        android:label="RecentsOpener"
        <!-- No custom icon defined. Android will generate a default icon -->
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main entry point. The activity simply provides a button to
             trigger the recents panel via the accessibility service. -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Accessibility service definition. The service is not exported
             and will only be bound by the system. The service metadata
             references a configuration file under res/xml/. -->
        <service
            android:name=".RecentsAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilityserviceconfig" />
        </service>

    </application>

</manifest>