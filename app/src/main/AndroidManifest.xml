<?xml version="1.0" encoding="utf-8"?>
<!--
    This manifest defines the basic configuration for the RecentsOpener app.
    The app consists of a single Activity and an AccessibilityService.

    The AccessibilityService is used to request the system to show the recents
    (overview) screen using performGlobalAction(GLOBAL_ACTION_RECENTS).
    To use the service the user must explicitly enable it in the system
    accessibility settings.

    RecentsOpener:
    - MainActivity zeigt nur einen Button
    - AccessibilityService ruft performGlobalAction(GLOBAL_ACTION_RECENTS) auf
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Allow querying launcher activities of other packages. Without
         this <queries> element, Android 11+ restricts visibility of
         packages outside this application. We need to enumerate and
         launch other apps via PackageManager. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>
    <!-- Permission to query recent app usage -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@drawable/ic_app_launcher"
        android:roundIcon="@drawable/ic_app_launcher"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Allow external tools (e.g. KeyMapper) to trigger the last app switcher -->
            <intent-filter>
                <action android:name="eu.recentsopener.OPEN_LAST_APP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Allow external tools to open the full recent apps list -->
            <intent-filter>
                <action android:name="eu.recentsopener.SHOW_RECENT_LIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".RecentsAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilityserviceconfig" />
        </service>

        <!-- Activity showing a list of recent apps using UsageStatsManager -->
        <activity
            android:name=".RecentAppsActivity"
            android:exported="true">
            <!-- Intent filter so external tools (e.g. Key Mapper) can open the recents list -->
            <intent-filter>
                <action android:name="com.example.recentsopener.SHOW_RECENTS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity that immediately switches to the last used app. Theme.NoDisplay prevents any UI flicker. -->
        <activity
            android:name=".LastAppActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="com.example.recentsopener.SHOW_LAST_APP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>