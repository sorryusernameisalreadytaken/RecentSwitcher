<?xml version="1.0" encoding="utf-8"?>
<!--
    This manifest defines the basic configuration for the RecentsOpener app.
    The app consists of a single Activity and an AccessibilityService.

    The AccessibilityService is used to request the system to show the recents
    (overview) screen using performGlobalAction(GLOBAL_ACTION_RECENTS).
    To use the service the user must explicitly enable it in the system
    accessibility settings.

    RecentsOpener:
    - MainActivity zeigt nur einen Button
    - AccessibilityService ruft performGlobalAction(GLOBAL_ACTION_RECENTS) auf
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="eu.recentsopener">
    <!-- Allow querying launcher activities of other packages. Without
         this <queries> element, Android 11+ restricts visibility of
         packages outside this application. We need to enumerate and
         launch other apps via PackageManager. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>
    <!-- Permission to query recent app usage -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />

    <!-- Permission to query all packages for variant D. This is flagged by Google Play so we ignore the lint warning. -->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".RecentsAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilityserviceconfig" />
        </service>

        <!-- Activity showing a list of recent apps using UsageStatsManager -->
        <activity
            android:name=".RecentAppsActivity"
            android:exported="true">
            <!-- Intent filter so external tools (e.g. Key Mapper) can open the recents list -->
            <intent-filter>
                <action android:name="eu.recentsopener.SHOW_RECENTS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Variant B: Activity showing recent apps using only UsageEvents -->
        <activity
            android:name=".RecentAppsActivityV2"
            android:exported="true" />

        <!-- Variant C: Activity showing recent apps using daily UsageStats -->
        <activity
            android:name=".RecentAppsActivityV3"
            android:exported="true" />

        <!-- Variant D: Activity showing recent apps using unfiltered aggregated stats -->
        <activity
            android:name=".RecentAppsActivityV4"
            android:exported="true" />

        <!-- Variant E: Activity showing recent apps using the last-used time map -->
        <activity
            android:name=".RecentAppsActivityV5"
            android:exported="true" />

        <!-- Variant F: Activity showing recent apps using accessibility history -->
        <activity
            android:name=".RecentAppsActivityV6"
            android:exported="true" />

        <!-- Variant G: Activity showing recent apps with no filtering (diagnostic) -->
        <activity
            android:name=".RecentAppsActivityV7"
            android:exported="true" />
        <!-- Provide a launcher alias to quickly open the recents list via key mapping -->
        <activity-alias
            android:name=".RecentsLauncher"
            android:targetActivity=".RecentAppsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Activity that immediately switches to the last used app. Theme.NoDisplay prevents any UI flicker. -->
        <activity
            android:name=".LastAppActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="eu.recentsopener.SHOW_LAST_APP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Provide a launcher alias to quickly switch back to the last app via key mapping -->
        <activity-alias
            android:name=".LastLauncher"
            android:targetActivity=".LastAppActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Activity for managing excluded apps -->
        <activity
            android:name=".ExcludedAppsActivity"
            android:exported="true" />

    </application>

</manifest>