<?xml version="1.0" encoding="utf-8"?>
<!--
    Default (English) string resources for the RecentAppSwitcher project.
    These strings provide user‑visible labels and messages throughout the app.
    A German translation is provided in values‑de/strings.xml and will be
    automatically selected when the device language is set to German.
-->
<resources>
    <!-- Application name shown in the launcher and system UI -->
    <string name="app_name">RecentAppSwitcher</string>

    <!-- Button labels on the main screen -->
    <string name="show_recent_apps_button">Recent apps</string>
    <string name="open_last_app_button">Last app</string>
    <!-- Button label to open the system recents (overview) menu -->
    <string name="list_actions_button">Open system recents menu</string>
    <string name="manage_excluded_button">Manage excluded apps</string>
    <string name="collect_debug_button">Collect debug report</string>
    <string name="show_live_events_button">Live events</string>
    <string name="enable_service_button">Enable service</string>

    <!-- Status messages for the accessibility service -->
    <string name="service_not_enabled">The accessibility service is not active. You can enable it in the settings if it is needed for other functions.</string>
    <string name="service_enabled">The accessibility service is active.</string>
    <!-- Note indicating that the accessibility service is not currently used by this app -->
    <string name="service_note_not_used">Note: This app does not currently make use of the accessibility service.</string>

    <!-- Messages and prompts on the recents screen -->
    <string name="close_all_stub">Close All (stub)</string>
    <string name="close_others_stub">Close Others (stub)</string>
    <string name="grant_usage_access">Grant usage access to show recent apps.</string>

    <!-- Strings used when including/excluding apps -->
    <string name="no_excluded_apps">No excluded apps found.</string>
    <string name="app_excluded">%1$s has been excluded.</string>
    <string name="app_included">%1$s has been re‑enabled.</string>
    <string name="no_last_app">No previous app found.</string>

    <!-- Content description for app icons in lists -->
    <string name="app_icon_desc">App icon</string>

    <!-- Title of the accessibility settings screen (not currently used) -->
    <string name="accessibility_settings_title">Accessibility settings</string>

    <!-- Description and label shown in the system accessibility settings for our service -->
    <string name="accessibility_service_description">Allows the app to perform global actions such as showing the system recents menu and automating navigation within app settings.</string>
    <string name="accessibility_service_label">RecentAppSwitcher accessibility service</string>

    <!-- Descriptive texts for list screens -->
    <string name="recent_apps_description">Select an app to launch it. Long press to exclude or include.</string>
    <string name="excluded_apps_description">Tap an app to include it again.</string>
    <string name="live_events_description">This list displays all recent usage events (last 5 minutes).</string>

    <!-- Debug report messages -->
    <string name="debug_report_saved">Debug report saved: %1$s</string>
    <string name="debug_report_failed">Failed to write debug report: %1$s</string>
</resources>
