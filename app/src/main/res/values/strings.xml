<?xml version="1.0" encoding="utf-8"?>
<!--
    Default (English) string resources for the RecentAppSwitcher project.
    These strings provide user‑visible labels and messages throughout the app.
    A German translation is provided in values‑de/strings.xml and will be
    automatically selected when the device language is set to German.
-->
<resources>
    <!-- Application name shown in the launcher and system UI -->
    <string name="app_name">RecentAppSwitcher</string>

    <!-- Button labels on the main screen -->
    <string name="show_recent_apps_button">Recent apps</string>
    <string name="open_last_app_button">Open last app</string>
    <!-- Button label to open the system recents (overview) menu -->
    <string name="list_actions_button">Open system recents menu</string>
    <string name="manage_excluded_button">Manage excluded apps</string>
    <string name="collect_debug_button">Collect debug report</string>
    <string name="show_live_events_button">Live events</string>
    <string name="enable_service_button">Enable service</string>

    <!-- Buttons for launching alternate recent apps list variants -->
    <string name="show_recent_apps_variant1_button">Recent apps (v1)</string>
    <string name="show_recent_apps_variant2_button">Recent apps (v2)</string>
    <string name="show_recent_apps_variant3_button">Recent apps (v3)</string>
    <string name="show_recent_apps_variant4_button">Recent apps (v4)</string>
    <!-- Buttons to launch additional variants (v5–v8) of the recents list for further
         experimentation with focus behaviours. See documentation in MainActivity. -->
    <string name="show_recent_apps_variant5_button">Recent apps (v5)</string>
    <string name="show_recent_apps_variant6_button">Recent apps (v6)</string>
    <string name="show_recent_apps_variant7_button">Recent apps (v7)</string>
    <string name="show_recent_apps_variant8_button">Recent apps (v8)</string>

    <!-- Buttons to launch additional recents list variants (v9–v12). These
         variants build upon variants 2 and 3 but modify focus ordering and
         row focusability to further refine DPAD navigation. Variant 9 uses
         BEFORE_DESCENDANTS focus order with both the row and gear
         focusable. Variant 10 uses AFTER_DESCENDANTS focus order with row
         and gear focusable. Variant 11 makes the row non‑focusable while
         keeping the gear focusable and uses BEFORE_DESCENDANTS. Variant 12
         keeps the row non‑focusable and uses AFTER_DESCENDANTS. All four
         allow DPAD‑RIGHT to reach the gear and DPAD‑DOWN from the gear
         moves to the next app’s row. -->
    <string name="show_recent_apps_variant9_button">Recent apps (v9)</string>
    <string name="show_recent_apps_variant10_button">Recent apps (v10)</string>
    <string name="show_recent_apps_variant11_button">Recent apps (v11)</string>
    <string name="show_recent_apps_variant12_button">Recent apps (v12)</string>

    <!-- Table‑style variants. These variants use a split layout with the
         application details in one column and the action button in a
         separate column. Variant 13 uses BEFORE_DESCENDANTS focus order;
         variant 14 uses AFTER_DESCENDANTS. -->
    <string name="show_recent_apps_variant13_button">Recent apps (v13)</string>
    <string name="show_recent_apps_variant14_button">Recent apps (v14)</string>

    <!-- Status messages for the accessibility service -->
    <string name="service_not_enabled">The accessibility service is not active. You can enable it in the settings if it is needed for other functions.</string>
    <string name="service_enabled">The accessibility service is active.</string>
    <!-- Note indicating that the accessibility service is not currently used by this app -->
    <string name="service_note_not_used">Note: This app does not currently make use of the accessibility service.</string>

    <!-- Messages and prompts on the recents screen -->
    <!-- Buttons on the recents screen to close apps via the accessibility service -->
    <string name="close_all_apps_button">Close all apps</string>
    <string name="close_other_apps_button">Close other apps</string>
    <!-- Alternative bulk close buttons for testing different force‑stop strategies -->
    <string name="close_all_apps_variant2_button">Close all apps (alt 1)</string>
    <string name="close_all_apps_variant3_button">Close all apps (alt 2)</string>
    <!-- New alternative variant for bulk closing apps. This variant reloads the recents list
         after each close and defers closing system settings packages until the end. -->
    <string name="close_all_apps_variant4_button">Close all apps (alt 3)</string>

    <!-- Buttons for targeted closing of specific test apps. These buttons are added to the
         main UI to allow experimentation with different bulk close strategies on a fixed
         list of packages. Each variant number corresponds to a different force‑stop
         strategy implemented in MainActivity. -->
    <string name="close_specific_apps_variant1_button">Close specific apps (v1)</string>
    <string name="close_specific_apps_variant2_button">Close specific apps (v2)</string>
    <string name="close_specific_apps_variant3_button">Close specific apps (v3)</string>
    <string name="close_specific_apps_variant4_button">Close specific apps (v4)</string>
    <string name="grant_usage_access">Grant usage access to show recent apps.</string>

    <!-- Strings used when including/excluding apps -->
    <string name="no_excluded_apps">No excluded apps found.</string>
    <string name="app_excluded">%1$s has been excluded.</string>
    <string name="app_included">%1$s has been re-enabled.</string>
    <string name="no_last_app">No previous app found.</string>

    <!-- Content description for app icons in lists -->
    <string name="app_icon_desc">App icon</string>

    <!-- Prompt shown when the user taps a live events entry. It hints that a long
         press will exclude the app from the recents list. The placeholder %1$s
         will be replaced with the app label. -->
    <string name="long_press_to_exclude">Long press to exclude %1$s from recents.</string>

    <!-- Title of the accessibility settings screen (not currently used) -->
    <string name="accessibility_settings_title">Accessibility settings</string>

    <!-- Description and label shown in the system accessibility settings for our service -->
    <string name="accessibility_service_description">Allows the app to perform global actions such as showing the system recents menu and automating navigation within app settings.</string>
    <string name="accessibility_service_label">RecentAppSwitcher accessibility service</string>

    <!-- Descriptive texts for list screens -->
    <string name="recent_apps_description">Select an app to launch it. Long press to exclude or include.</string>
    <string name="excluded_apps_description">Tap an app to include it again.</string>
    <string name="live_events_description">This list displays all recent usage events (last 60 minutes).</string>

    <!-- Debug report messages -->
    <string name="debug_report_saved">Debug report saved: %1$s</string>
    <string name="debug_report_failed">Failed to write debug report: %1$s</string>

    <!-- Description for settings gear button in recent apps list -->
    <string name="open_settings_description">Open app settings</string>
</resources>
