<?xml version="1.0" encoding="utf-8"?>
<!--
    Variant 1 of the recent app list item. This layout mirrors the original
    behaviour where the list row itself is not focusable and the settings gear
    (ImageButton) can receive focus via DPAD navigation. Descendant
    focusability is set to AFTER_DESCENDANTS so that focus moves to child
    controls when appropriate. Use this variant to reproduce the classic
    navigation where the row is selected by default and DPAD‑right moves focus
    to the gear.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="afterDescendants">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_icon_desc" />

    <TextView
        android:id="@+id/app_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/open_settings_description"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="4dp"
        android:src="@android:drawable/ic_menu_manage" />

</LinearLayout>