<?xml version="1.0" encoding="utf-8"?>
<!--
    Main layout for the RecentsOpener app. It shows a status message and
    presents one or two buttons depending on whether the accessibility
    service is currently enabled. When the service is enabled the user can
    tap "Letzte Apps Ã¶ffnen" to request the system to show the overview
    screen. When the service is not enabled the user can tap
    "Dienst aktivieren" to jump to the accessibility settings.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_enable_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_service_button"
        android:padding="12dp"
        android:visibility="gone" />

    <!-- Button to launch the recent apps screen (UsageStats) -->
    <Button
        android:id="@+id/btn_show_recent_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_a_button"
        android:padding="12dp" />

    <!-- Button to launch the recent apps screen using events only (Variant B) -->
    <Button
        android:id="@+id/btn_show_recent_apps_v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_b_button"
        android:padding="12dp" />

    <!-- Button to launch the recent apps screen using daily usage stats (Variant C) -->
    <Button
        android:id="@+id/btn_show_recent_apps_v3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_c_button"
        android:padding="12dp" />

    <!-- Button to launch the recent apps screen using unfiltered aggregated stats (Variant D) -->
    <Button
        android:id="@+id/btn_show_recent_apps_v4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_d_button"
        android:padding="12dp" />

    <!-- Button to launch the recent apps screen using last used map (Variant E) -->
    <Button
        android:id="@+id/btn_show_recent_apps_v5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_e_button"
        android:padding="12dp" />

    <!-- Button to launch the recent apps screen based on accessibility events (Variant F) -->
    <Button
        android:id="@+id/btn_show_recent_apps_v6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_f_button"
        android:padding="12dp" />

    <!-- Button to launch the recent apps screen without filtering (Variant G) -->
    <Button
        android:id="@+id/btn_show_recent_apps_v7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_g_button"
        android:padding="12dp" />

    <!-- Button to immediately switch back to the last app -->
    <Button
        android:id="@+id/btn_open_last_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_last_app_button"
        android:padding="12dp" />

    <!-- Button to manage excluded applications -->
    <Button
        android:id="@+id/btn_manage_excluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_excluded_button"
        android:padding="12dp" />

    <!-- Button to collect a debug report with usage events and stats -->
    <Button
        android:id="@+id/btn_collect_debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/collect_debug_button"
        android:padding="12dp" />

</LinearLayout>