<?xml version="1.0" encoding="utf-8"?>
<!--
    Main layout for the RecentsOpener app. It shows a status message and
    presents one or two buttons depending on whether the accessibility
    service is currently enabled. When the service is enabled the user can
    tap "Letzte Apps öffnen" to request the system to show the overview
    screen. When the service is not enabled the user can tap
    "Dienst aktivieren" to jump to the accessibility settings.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:textColor="@color/recent_app_text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_enable_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_service_button"
        android:padding="12dp"
        android:visibility="gone" />

    <!-- Button to launch the recent apps screen (UsageStats) -->
    <Button
        android:id="@+id/btn_show_recent_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_button"
        android:padding="12dp" />

    <!-- Additional buttons to launch alternate recent‑apps list variants. These allow
         the user to experiment with different focus behaviours for the recent
         apps list. Variant 1 reproduces the classic behaviour where the row
         itself is not focusable and the gear can receive focus. Variant 2
         makes the entire row focusable and prioritises it over the gear. Variant 3
         disables focus on the gear entirely so navigation stays on the row. Variant 4
         makes the row focusable and the gear not focusable while still using
         afterDescendants focus order. -->
    <Button
        android:id="@+id/btn_show_recent_apps_variant1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant1_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_show_recent_apps_variant2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant2_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_show_recent_apps_variant3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant3_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_show_recent_apps_variant4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant4_button"
        android:padding="12dp" />

    <!-- Additional buttons for recents list variants V5–V8 -->
    <Button
        android:id="@+id/btn_show_recent_apps_variant5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant5_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_show_recent_apps_variant6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant6_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_show_recent_apps_variant7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant7_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_show_recent_apps_variant8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant8_button"
        android:padding="12dp" />

    <!-- Button to immediately switch back to the last app -->
    <Button
        android:id="@+id/btn_open_last_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_last_app_button"
        android:padding="12dp" />

    <!-- Button to invoke the system recents screen via accessibility (List Actions) -->
    <Button
        android:id="@+id/btn_list_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_actions_button"
        android:padding="12dp" />

    <!-- Button to manage excluded applications -->
    <Button
        android:id="@+id/btn_manage_excluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_excluded_button"
        android:padding="12dp" />

    <!-- Button to generate a debug report for troubleshooting -->
    <Button
        android:id="@+id/btn_collect_debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/collect_debug_button"
        android:padding="12dp" />

    <!-- Button to show live events with detailed info -->
    <Button
        android:id="@+id/btn_show_live_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_live_events_button"
        android:padding="12dp" />

    <!-- Buttons to close a specific set of apps using different strategies (v1–v4). These
         buttons are only functional when the accessibility service is enabled. -->
    <Button
        android:id="@+id/btn_close_specific_apps_variant1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_specific_apps_variant1_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_close_specific_apps_variant2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_specific_apps_variant2_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_close_specific_apps_variant3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_specific_apps_variant3_button"
        android:padding="12dp" />
    <Button
        android:id="@+id/btn_close_specific_apps_variant4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_specific_apps_variant4_button"
        android:padding="12dp" />

</LinearLayout>