<?xml version="1.0" encoding="utf-8"?>
<!--
    Main layout for the RecentsOpener app. It shows a status message and
    presents one or two buttons depending on whether the accessibility
    service is currently enabled. When the service is enabled the user can
    tap "Letzte Apps öffnen" to request the system to show the overview
    screen. When the service is not enabled the user can tap
    "Dienst aktivieren" to jump to the accessibility settings.
-->
<!--
    Wrap the main content in a ScrollView so that all buttons remain
    accessible on devices with limited vertical screen space (e.g. Android
    TV). Without a scrollable container the long list of buttons may
    extend beyond the visible area and cannot be reached via DPAD
    navigation. The ScrollView scrolls automatically when focus moves
    beyond the visible region.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:textColor="@color/recent_app_text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_enable_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_service_button"
        android:padding="12dp"
        android:visibility="gone" />

    <!-- Button to launch the recent apps screen (UsageStats) -->
    <Button
        android:id="@+id/btn_show_recent_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_button"
        android:padding="12dp" />

    <!-- Additional buttons to launch alternate recent‑apps list variants. These allow
         the user to experiment with different focus behaviours for the recent
         apps list. Variant 1 reproduces the classic behaviour where the row
         itself is not focusable and the gear can receive focus. Variant 2
         makes the entire row focusable and prioritises it over the gear. Variant 3
         disables focus on the gear entirely so navigation stays on the row. Variant 4
         makes the row focusable and the gear not focusable while still using
         afterDescendants focus order. -->
    <Button
        android:id="@+id/btn_show_recent_apps_variant1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_recent_apps_variant1_button"
        android:padding="12dp" />
