<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Buttons to close apps. These appear at the top of the screen.
         They will only be visible when the accessibility service is active. -->
    <Button
        android:id="@+id/btn_close_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_all_apps_button"
        android:visibility="gone"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/btn_close_others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_other_apps_button"
        android:visibility="gone"
        android:paddingBottom="8dp" />

    <!-- Additional test buttons for alternative bulk close implementations. These will only be
         visible when the accessibility service is active so that the user can evaluate
         different approaches to closing all apps. -->
    <Button
        android:id="@+id/btn_close_all_variant2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_all_apps_variant2_button"
        android:visibility="gone"
        android:paddingBottom="8dp" />
    <Button
        android:id="@+id/btn_close_all_variant3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_all_apps_variant3_button"
        android:visibility="gone"
        android:paddingBottom="8dp" />

    <!-- Explanation for the recents list -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recent_apps_description"
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <!-- List of recent packages retrieved via UsageStatsManager -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>