<?xml version="1.0" encoding="utf-8"?>
<!--
    Variant 35: Focus on left cell only; gear remains unfocusable.

    In this layout the row itself is not focusable and the settings gear is also
    not focusable.  Only the left container (`app_cell`) can receive focus.
    DPAD‑RIGHT from `app_cell` points to the gear, but because the gear
    remains unfocusable the ListView key handler must explicitly request
    focus on the gear when needed.  The gear defines `nextFocusLeft/Up/Down`
    pointing back to `app_cell` to avoid DPAD navigation skipping to a gear
    in another row.  This variant emphasises a strong anchor on the left
    and requires code‑driven navigation to the action button.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="beforeDescendants">

    <!-- Left container: the sole focus anchor. -->
    <LinearLayout
        android:id="@+id/app_cell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@id/settings_button">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_icon_desc" />

        <TextView
            android:id="@+id/app_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <!-- Gear: unfocusable.  Defines nextFocus attributes to return to app_cell. -->
    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/open_settings_description"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="4dp"
        android:src="@android:drawable/ic_menu_manage"
        android:nextFocusLeft="@id/app_cell"
        android:nextFocusUp="@id/app_cell"
        android:nextFocusDown="@id/app_cell" />

</LinearLayout>
